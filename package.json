{
  "name": "@transient/client",
  "version": "0.0.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "browser/nodeJS implementation of Transient Communications.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeAwareness/transient.client"
  },
  "author": "Mark Vasile <mark.vasile@peer8.com>",
  "homepage": "https://github.com/CodeAwareness/transient.client/tree/main#readme",
  "bugs": {
    "url": "https://github.com/CodeAwareness/transient.client/issues"
  },
  "keywords": [
    "transient",
    "websockets"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "type": "commonjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./src/index.js"
  },
  "scripts": {
    "build-ts": "tsc --build tsconfig.json",
    "build": "npm run build-ts && npm run lint",
    "lint": "eslint \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" --fix",
    "test": "jest --forceExit --verbose",
    "test:coverage": "jest --forceExit --coverage --verbose",
    "test:watch": "jest --watchAll --verbose",
    "watch:ts": "tsc -w --pretty"
  },
  "dependencies": {
    "socket.io-client": "^4.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.4.7",
    "typescript": "^4.5.5"
  }
}
