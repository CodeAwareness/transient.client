{
	"compilerOptions": {
    "baseUrl": ".",
		"outDir": "dist",
    "strict": true,
		"lib": [ "es6", "es7", "dom" ],
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"noImplicitReturns": true,
    "declaration": true,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node"
	},
  "types": [ "node", "jest" ],
  "include": ["src/**/*"],
	"exclude": [
		"node_modules"
	]
}
